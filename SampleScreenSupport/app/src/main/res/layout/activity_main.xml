<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/small_content"
        android:gravity="bottom|center_horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/small_content"
            android:layout_height="@dimen/small_content"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="@dimen/spacing" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/medium_content"
            android:layout_height="@dimen/medium_content"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="@dimen/spacing" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="@dimen/large_content"
            android:layout_height="@dimen/large_content"
            android:background="@android:color/darker_gray" />

    </LinearLayout>




</RelativeLayout>
